<?xml version="1.0" encoding="utf-8"?>
<com.example.hoon.myapplication.default_logo xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hoon.myapplication.individual_counter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/question"
            android:layout_margin="10dip"
            android:id="@+id/imageButton"
            android:onClick="ShowHelper"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "개인전"
            android:textSize = "20dip"
            android:layout_toLeftOf="@id/imageButton"
            android:layout_marginTop = "10dip"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/count_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal"
            android:text="인원 설정"
            android:textSize="25dip" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "1"
            android:gravity="center"
            android:textSize = "40sp"
            android:background="@drawable/counter_btn_design"
            android:textColor="#FFFFFF"
            android:layout_below="@id/count_setting"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dip"
            android:id="@+id/counter"/>

        <ImageButton
            android:id="@+id/minus_btn"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/counter"
            android:background="@drawable/minus_btn"
            android:onClick="counter"/>

        <ImageButton
            android:id="@+id/plus_btn"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/counter"
            android:background="@drawable/plus_btn"
            android:onClick="counter"/>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignRight="@+id/imageButton"
            android:layout_below="@+id/counter"
            android:background="@drawable/next" />

    </RelativeLayout>
</com.example.hoon.myapplication.default_logo>